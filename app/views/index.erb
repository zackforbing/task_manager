<h1>All Tasks</h1>

  <% @tasks.each do |task| %>
    <h3><%= task.id %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
    <a class="btn btn-default" href="/tasks/<%= task.id %>/edit">Edit</a>
    <form class="btn btn-default" action="/tasks/<%= task.id %>" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete Task">
    </form>
  <% end %>
